                                    <!--    <th><label>End Time: </label></th>-->
                                    <!--    <th><input id="endTime" type="time"/></th>-->
                                    <!--</tr>-->
                                    <!--<tr>-->
                                    <!--    <th><label>Booked By: </label></th>-->
                                    <!--    <th><input id="bookedBy" type="text"/></th>-->
                                    <!--</tr>-->
                                </tbody>
                            </table>
                            
                        </div>
                        <div class="modal-footer">
                            <button id="deleteSaveButton" type="button" class="btn btn-success m-1" data-dismiss="modal">Save Changes</button>
                            <button id="deleteCancelButton" type="button" class="btn btn-secondary m-1" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        
        
        
        
        <script>
            $('#home').on('click', function(e){
               window.location.href = '/Final' 
            });
            $('#rubric').on('click', function(e){
               window.location.href = '/Final/rubric' 
            });
            $('#admin').on('click', function(e){
               window.location.href = '/Final/login' 
            });
            
            $('#addSaveButton').on('click', function(e) {
                let dateOf = $("#dateOf").val();
                let startTime = $("#startTime").val();
                let endTime = $("#endTime").val();
                let bookedBy = $("#bookedBy").val();
                
                $.ajax({
                    method: "GET",
                    url: "/Final/addAppointmentRequest",
                    dataType: "json",
                    data: {
                        "dateOf": dateOf,
                        "startTime": startTime,
                        "endTime": endTime,
                        "bookedBy": bookedBy
                    },
                    success: function(result, status) {
                        console.log("It might have just worked!");
                        window.location.reload();
                    }
                });
            });
            
