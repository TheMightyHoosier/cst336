<!DOCTYPE html>
<html>
    <head>
        <title> Final Scheduler </title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <!--<link href="css/styles.css" rel="stylesheet" type="text/css" />-->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    </head>
    <body class="text-center">
        <div class="container">
            <h1>Scheduled Availability (Admin)</h1>
            <button id="home" class="btn btn-primary m-1">Home</button>
            <button id="rubric" class="btn btn-primary m-1">Rubric</button>
            <button id="admin" class="btn btn-warning m-1">Logout</button>
            
            <table class="table table-bordered">
                <thead class="thead thead-light">
                    <th>Appointment ID</th>
                    <th>Appointment Date</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th>Booked By</th>
                    <th><a class="btn btn-success m-1" id="new" data-toggle="modal" data-target="#addModal">New Appointment</a></th>
                    <th></th>
                </thead>
                <% appointments.forEach(function(appointment){ %>
                <tr>
                    <th><%= appointment.appointmentId %></th>
                    <th><%= new Date(appointment.dateOf).toDateString(); %></th>
                    <th><%= appointment.startTime %></th>
                    <th><%= appointment.endTime %></th>
                    <th><%= appointment.bookedBy %></th>
                    <th><button class="btn btn-secondary m-1" id="edit" data-toggle="modal" data-target="#editModal">Edit</button></th>
                    <th><button class="btn btn-danger m-1" id="delete" data-toggle="modal" data-target="#deleteModal">Delete</button></th>
                </tr>
                <% }); %>
            </table>
        </div>
        
        <!--Add Modal-->
            <div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labeledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            
                            <h5 class="modal-title" id="exampleModalLabel">Add Appointment</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            
                        </div>
                        <div class="modal-body">
                            
                            <table class="table table bordered">
                                <thead class="thead thead-light">
                                    <th>Appointment Details</th>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th><label>Appointment Date: </label></th>
                                        <th><input id="adddateOf" type="date"/></th>
                                    </tr>
                                    <tr>
                                        <th><label>Start Time: </label></th>
                                        <th><input id="addstartTime" type="time"/></th>
                                    </tr>
                                    <tr>
                                        <th><label>End Time: </label></th>
                                        <th><input id="addendTime" type="time"/></th>
                                    </tr>
                                    <tr>
                                        <th><label>Booked By: </label></th>
                                        <th><input id="addbookedBy" type="text"/></th>
                                    </tr>
                                </tbody>
                            </table>
                            
                        </div>
                        <div class="modal-footer">
                            <button id="addSaveButton" type="button" class="btn btn-success m-1" data-dismiss="modal">Add Appointment</button>
                            <button id="addCancelButton" type="button" class="btn btn-secondary m-1" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
            
            <!--Edit Modal-->
            <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labeledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            
                            <h5 class="modal-title" id="exampleModalLabel">Edit Appointment</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            
                        </div>
                        <div class="modal-body">
                            
                            <table class="table table bordered">
                                <thead class="thead thead-light">
                                    <th>Appointment Details</th>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th><label>ID</label></th>
                                        <th><input id="appointmentId" type="text"</th>
                                    </tr>
                                    <tr>
                                        <th><label>Appointment Date: </label></th>
                                        <th><input id="dateOf" type="date"/></th>
                                    </tr>
                                    <tr>
                                        <th><label>Start Time: </label></th>
                                        <th><input id="startTime" type="time"/></th>
                                    </tr>
                                    <tr>
                                        <th><label>End Time: </label></th>
                                        <th><input id="endTime" type="time"/></th>
                                    </tr>
                                    <tr>
                                        <th><label>Booked By: </label></th>
                                        <th><input id="bookedBy" type="text"/></th>
                                    </tr>
                                </tbody>
                            </table>
                            
                        </div>
                        <div class="modal-footer">
                            <button id="editSaveButton" type="button" class="btn btn-success m-1" data-dismiss="modal">Save Changes</button>
                            <button id="editCancelButton" type="button" class="btn btn-secondary m-1" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
            
            <!--Delete Modal-->
            <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labeledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            
                            <h5 class="modal-title" id="exampleModalLabel">Delete Appointment</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            
                        </div>
                        <div class="modal-body">
                            
                            <table class="table table bordered">
                                <thead class="thead thead-light">
                                    <th>Appointment Details</th>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th><label>ID of Appointment to Delete</label></th>
                                        <th><input id="delappointmentId" type="text"</th>
                                    </tr>
                                    <!--<tr>-->
                                    <!--    <th><label>Appointment Date: </label></th>-->
                                    <!--    <th><input id="dateOf" type="date"/></th>-->
                                    <!--</tr>-->
                                    <!--<tr>-->
                                    <!--    <th><label>Start Time: </label></th>-->
