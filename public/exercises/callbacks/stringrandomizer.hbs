<script>
    function getRandomInt(max) {
      return Math.floor(Math.random() * Math.floor(max));
    }
    
    function remove_character(str, char_pos) 
     {
      let part1 = str.substring(0, char_pos);
      let part2 = str.substring(char_pos + 1, str.length);
      return (part1 + part2);
     }
    
    function randomize(name){
        console.log('Randomizing string...');
        let oldString = name;
        let newString = '';
        let letter = '';
        let pos = 0;
        while(oldString.length > 0){
            pos = getRandomInt(oldString.length);
            letter = oldString[pos];
            newString += letter;
            oldString = remove_character(oldString, pos);
            console.log(oldString);
            console.log(newString);
        }
    }
    
    randomize('justin');
</script>